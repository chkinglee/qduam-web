<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.qduam.modules.assn.dao.AssnDao">

	<resultMap id="getAssn" type="com.qduam.modules.assn.entity.Assn">
        <id property="id" column="id"/>
        <result property="logname" column="logname"/>
        <result property="assnname" column="assnname"/>
        <result property="director" column="director"/>
        <result property="level" column="level"/>
        <result property="phone" column="phone"/>
        <collection property="departs" column="{assn.id=id}" select="com.qduam.modules.assn.dao.DepartDao.findList"
        ofType="com.qduam.modules.assn.entity.Depart" fetchType="lazy">
            <id property="id" column="id"/>
            <result property="logname" column="logname"/>
            <result property="depname" column="depname"/>
            <result property="intro" column="intro"/>
            <result property="level" column="level"/>
        </collection>
    </resultMap>

	<insert id="insert">
		INSERT INTO assn(logname, assnname, director, phone, level)
		VALUES(#{logname}, #{assnname}, #{director}, #{phone}, #{level})
	</insert>

	<update id="update">
		UPDATE assn
		<set>
			<if test="logname != null and logname != ''">
				logname = #{logname},
			</if>
			<if test="assnname != null and assnname != ''">
				assnname = #{assnname},
			</if>
			<if test="director != null and director != ''">
				director = #{director},
			</if>
			<if test="phone != null and phone != ''">
				phone = #{phone},
			</if>
			<if test="level != null and level != ''">
				level = #{level}
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="delete">
		DELETE FROM assn WHERE id = #{id}
	</delete>

	<select id="get" resultMap="getAssn">
		SELECT * FROM assn WHERE id = #{id}
	</select>

	<select id="findList" resultMap="getAssn">
		SELECT * FROM assn
		<where>
			<if test="logname != null and logname != ''">
				AND logname = #{logname}
			</if>
			<if test="assnname != null and assnname != ''">
				AND assnname LIKE concat('%', #{assnname}, '%')
			</if>
			<if test="director != null and director != ''">
				AND director = #{director}
			</if>
			<if test="phone != null and phone != ''">
				AND phone = #{phone}
			</if>
			<if test="level != null and level != ''">
				AND level = #{level}
			</if>
		</where>
	</select>

	<select id="findAllList" resultMap="getAssn">
		SELECT * FROM assn
	</select>

	<select id="findListByStu" resultMap="getAssn">
		SELECT * FROM STU_ASSN WHERE STUID=#{id}
	</select>

</mapper>